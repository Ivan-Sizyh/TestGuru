<h1><%= t('entities.badge') %> <%= @badge.title %></h1>

<p><%= t('activerecord.attributes.badges.description') %>: <%= @badge.description %></p>

<p><%= t('activerecord.attributes.badges.image') %>:</p>

<td class="align-middle"><%= image_tag @badge.image,
                                       src: 'Image Not Found',
                                       size: '200x200',
                                       onerror: 'this.error=null;this.src="https://img-fotki.yandex.ru/get/100036/137106206.762/0_1f23e4_997e0e78_orig.jpg"' %></td>

<p><%= t('activerecord.attributes.badges.criterion') %>: <%= @badge.criterion %></p>

<p><%= link_to t('actions.edit'), edit_admin_badge_path(@badge) %></p>

<p>
  <%= link_to t('actions.delete'),
              admin_badge_path(@badge),
              method: :delete,
              data: { confirm: t('actions.confirm_delete') } %>
</p>

<p><%= link_to t('actions.back'), admin_badges_path %></p>