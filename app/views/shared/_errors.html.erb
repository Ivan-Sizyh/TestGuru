<% if resource.present? && resource.errors.present? %>
  <%= content_tag :div, class: 'resource-errors', data: { resource_id: resource.id  } do %>
    <h2><%= I18n.translate 'errors.messages.not_saved', resource: resource.title , count: resource.errors.full_messages.count %> в форме:</h2>

    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
